   <children>
      <Pane fx:id="startViewPane" layoutY="-2.0" prefHeight="409.0" prefWidth="409.0">
         <children>
            <Button fx:id="singlePlayerButton" layoutX="61.0" layoutY="325.0" mnemonicParsing="false" onAction="#onSinglePlayerButtonClick" text="Single Player">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="trainAIButton" layoutX="238.0" layoutY="325.0" mnemonicParsing="false" onAction="#onTrainAIButtonClick" text="Train your AI">
